{
  "name": "@srgssr/pillarbox-web",
  "description": "Pillarbox is the modern SRG SSR player",
  "version": "0.6.9",
  "pillarbox-core": "dist/pillarbox.core.js",
  "pillarbox": "dist/pillarbox.js",
  "pillarbox-css": "dist/pillarbox.css",
  "targets": {
    "github-page": {
      "publicUrl": "./",
      "source": "demo/index.html",
      "distDir": "./dist",
      "isLibrary": false,
      "outputFormat": "esmodule"
    },
    "pillarbox-core": {
      "source": "src/pillarbox.js",
      "distDir": "./dist",
      "outputFormat": "esmodule",
      "includeNodeModules": false,
      "isLibrary": true,
      "optimize": true
    },
    "pillarbox": {
      "source": "build.js",
      "distDir": "./dist",
      "includeNodeModules": false,
      "isLibrary": true,
      "outputFormat": "esmodule",
      "optimize": true
    },
    "pillarbox-css": {
      "source": "node_modules/video.js/dist/video-js.css",
      "distDir": "./dist",
      "isLibrary": false,
      "optimize": true
    }
  },
  "files": [
    "dist/*",
    "docs/*"
  ],
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "npm run build:css && npm run build:pillarbox && npm run build:pillarbox-core",
    "build:css": "parcel build --target pillarbox-css",
    "build:pillarbox": "parcel build --target pillarbox",
    "build:pillarbox-core": "parcel build --target pillarbox-core",
    "eslint": "eslint --ext .js src",
    "github:page": "parcel build --target github-page",
    "outdated": "npm outdated",
    "release:ci": "semantic-release",
    "start": "parcel -p 6969 demo/*.html",
    "stylelint": "stylelint **/*.scss --custom-syntax",
    "stylelint:fix": "stylelint **/*.scss --fix",
    "test": "jest --verbose",
    "test:watch": "jest --watch --verbose"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SRGSSR/pillarbox-web/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SRGSSR/pillarbox-web.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/",
    "access": "public"
  },
  "devDependencies": {
    "@babel/core": "^7.22.5",
    "@babel/preset-env": "^7.22.5",
    "@commitlint/cli": "^18.0.0",
    "@commitlint/config-conventional": "^18.0.0",
    "@parcel/transformer-inline-string": "^2.10.0",
    "@parcel/transformer-sass": "^2.9.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.0.3",
    "@semantic-release/npm": "^11.0.0",
    "@types/jest": "^29.5.3",
    "babel-jest": "^29.5.0",
    "buffer": "^6.0.3",
    "eslint": "^8.43.0",
    "eslint-plugin-jest": "^27.2.2",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.6.1",
    "minimatch": "^9.0.3",
    "parcel": "^2.9.2",
    "rimraf": "^5.0.5",
    "semantic-release": "^22.0.5",
    "stylelint": "^15.10.1",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-order": "^6.0.3"
  },
  "dependencies": {
    "video.js": "^8.6.1",
    "videojs-contrib-eme": "^3.11.1"
  }
}
