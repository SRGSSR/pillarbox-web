{
  "branches": [
    {
      "name": "github-ci",
      "channel": "latest"
    },
    {
      "name": "main"
    }
  ],
  "plugins": [
    "@semantic-release/commit-analyzer",
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "header": "Pillarbox Web changes",
        "parserOpts": {
          "noteKeywords": [
            "BREAKING CHANGE",
            "BREAKING CHANGES",
            "BREAKING"
          ]
        },
        "presetConfig": {
          "types": [
            {
              "type": "breaking",
              "section": "Breaking Changes ‚ùó",
              "hidden": false
            },
            {
              "type": "feat",
              "section": "New Features üöÄ",
              "hidden": false
            },
            {
              "type": "fix",
              "section": "Enhancements and Bug Fixes üêõ",
              "hidden": false
            },
            {
              "type": "docs",
              "section": "Docs üìñ",
              "hidden": false
            },
            {
              "type": "style",
              "section": "Styles üé®",
              "hidden": false
            },
            {
              "type": "refactor",
              "section": "Refactor üî©",
              "hidden": false
            },
            {
              "type": "perf",
              "section": "Performances ‚ö°Ô∏è",
              "hidden": false
            },
            {
              "type": "test",
              "section": "Tests ‚úÖ",
              "hidden": false
            },
            {
              "type": "ci",
              "section": "CI üîÅ",
              "hidden": false
            },
            {
              "type": "chore",
              "section": "Chore üßπ",
              "hidden": false
            }
          ]
        },
        "writerOpts": {
          "groupBy": "type",
          "commitGroupsSort": [
            "breaking",
            "feat",
            "fix",
            "docs",
            "style",
            "refactor",
            "perf",
            "test",
            "ci",
            "chore"
          ]
        }
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "docs/CHANGELOG.md"
      }
    ],
    "@semantic-release/npm",
    [
      "@semantic-release/git",
      {
        "assets": [
          "package.json",
          "docs/CHANGELOG.md"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    "@semantic-release/github"
  ]
}
